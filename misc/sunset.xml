<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="sunset" name="Sunset" version="1.0">
  <author>Dan (github.com/d2718)</author>
  <_description>A dark theme, vibrant and pleasant</_description>

  <color name="night" value="#08040c"/>
  <color name="twilight" value="#101828"/>
  <color name="cloud" value="#302c34"/>
  <color name="fog" value="#404858"/>
  <color name="melville" value="#807890"/>
  <color name="sky" value="#58b0e0"/>

  <color name="mountain" value="#807890"/>

  <color name="coals" value="#e0500c"/>
  <color name="fire" value="#f08020"/>
  <color name="pomelo" value="#f0a050"/>
  <color name="sun" value="#f6d3a0"/>
  <color name="lining" value="#e8e0c8"/>

  <style name="text" foreground="sun" background="night"/>
  <style name="background-pattern" background="twilignt" foreground="pomelo"/>
  <style name="bracket-match" foreground="fire" background="cloud"/>
  <style name="bracket-mismatch" foreground="cloud" background="fire"/>
  <style name="current-line" background="twilight"/>
  <style name="current-line-number" foreground="sun"/>
  <style name="cursor" foreground="sun" background="cloud"/>
  <style name="line-numbers" foreground="fog" background="black"/>
  <style name="draw-spaces" foreground="fog"/>
  <style name="right-margin" background="twilight" foreground="pomelo"/>
  <style name="search-match" background="cloud"/>
  <style name="selection" use-style="search-match"/>
  <style name="snippet-focus" foreground="melville" background="twilight"/>

  <style name="def:boolean" foreground="sky" italic="true"/>
  <style name="def:character" foreground="mountain" bold="true"/>
  <style name="def:comment" foreground="melville"/>
  <style name="def:constant" foreground="sky"/>
  <style name="def:deletion" strikethrough="true"/>
  <style name="def:emphasis" italic="true"/>
  <style name="def:error" underline="single" underline-color="coals"/>
  <style name="def:heading" foreground="pomelo" bold="true"/>
  <style name="def:inline-code" foreground="lining"/>
  <style name="def:insertion" underline="true"/>
  <style name="def:keyword" foreground="fire"/>
  <style name="def:link-destination" underline="true"/>
  <style name="def:link-symbol" italic="true"/>
  <style name="def:list-marker" foreground="pomelo"/>
  <style name="def:note" underline="single" underline-color="melville"/>
  <style name="def:operator" foreground="fire"/>
  <style name="def:preprocessor" foreground="sun" background="cloud" bold="true"/>
  <style name="def:string" foreground="mountain"/>
  <style name="def:strong-emphasis" bold="true"/>
  <style name="def:type" bold="true"/>
  <style name="def:underlined" underline="single"/>
  <style name="def:warning" underline="single" underline-color="sun"/>

  <style name="def:base-n-integer" use-style="def:constant"/>
  <style name="def:complex" use-style="def:constant"/>
  <style name="def:decimal" use-style="def:constant"/>
  <style name="def:doc-comment" use-style="def:comment"/>
  <style name="def:doc-comment-element" use-style="def:comment"/>
  <style name='def:floating-point' use-style="def:constant"/>
  <style name="def:link-text" use-style="def:string"/>
  <style name="def:net-address" use-style="def:link-destination"/>
  <style name="def:number" use-style="def:constant"/>
  <style name="def:preformatted-section" use-style="def:inline-code"/>
  <style name="def:shebang" use-style="def:link-symbol"/>
  <style name="def:special-char" use-style="def:character"/>
  <style name="def:special-constant" use-style="def:constant"/>
  <style name="def:variable" use-style="text"/>

</style-scheme>
