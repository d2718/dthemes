<?xml version="1.0" encoding="UTF-8"?>
<style-scheme id="coma" name="coma" version="1.0">
  <author>Dan (github.com/d2718)</author>
  <_description>A muted theme, based on the aesthetics of sema</_description>

  <color name="black" value="#12100c"/>
  <color name="ltblack" value="#20202"/>
  <color name="dkgrey" value="#404044"/>
  <color name="mutegrey" value="#707080"/>
  <color name="grey" value="#a0a0b0"/>
  <color name="brgrey" value="#c0c0d0"/>

  <color name="red" value="#a08080"/>
  <color name="yellow" value="#a0a080"/>
  <color name="bryellow" value="#c0c090"/>
  <color name="mutegreen" value="#608860"/>
  <color name="green" value="#80a080"/>
  <color name="brgreen" value="#90c090"/>
  <color name="cyan" value="#80a0a0"/>
  <color name="blue" value="#8080a0"/>
  <color name="magenta" value="#a080a0"/>

  <style name="text" foreground="grey" background="black"/>
  <style name="background-pattern" background="ltblack"/>
  <style name="bracket-match" foreground="yellow" background="dkgrey"/>
  <style name="bracket-mismatch" foreground="black" background="red"/>
  <style name="current-line" background="ltblack"/>
  <style name="current-line-number" foreground="grey"/>
  <style name="cursor" foreground="brgrey"/>
  <style name="line-numbers" foreground="mutegrey" background="black"/>
  <style name="draw-spaces" foreground="dkgrey"/>
  <style name="right-margin" background="ltblack"/>
  <style name="search-match" background="dkgrey"/>
  <style name="selection" use-style="search-match"/>
  <style name="snippet-focus" foreground="grey" background="dkgrey"/>

  <style name="def:boolean" foreground="brgrey" italic="true"/>
  <style name="def:character" foreground="brgreen"/>
  <style name="def:comment" foreground="mutegrey"/>
  <style name="def:constant" foreground="brgrey"/>
  <style name="def:deletion" strikethrough="true"/>
  <style name="def:emphasis" italic="true"/>
  <style name="def:error" underline="single" underline-color="red"/>
  <style name="def:heading" foreground="brgrey" bold="true"/>
  <style name="def:inline-code" foreground="brgrey"/>
  <style name="def:insertion" underline="true"/>
  <style name="def:keyword" foreground="blue"/>
  <style name="def:link-destination" underline="true"/>
  <style name="def:link-symbol" italic="true"/>
  <style name="def:list-marker" foreground="yellow"/>
  <style name="def:note" underline="single" underline-color="mutegrey"/>
  <style name="def:operator" foreground="yellow"/>
  <style name="def:preformatted-section" foreground="brgrey" background="ltblack"/>
  <style name="def:preprocessor" foreground="cyan" bold="true" underline="single"/>
  <style name="def:special-char" foreground="bryellow"/>
  <style name="def:string" foreground="green"/>
  <style name="def:strong-emphasis" bold="true"/>
  <style name="def:type" bold="true"/>
  <style name="def:underlined" underline="single"/>
  <style name="def:variable" foreground="magenta"/>
  <style name="def:warning" underline="single" underline-color="yellow"/>

  <style name="def:base-n-integer" use-style="def:constant"/>
  <style name="def:complex" use-style="def:constant"/>
  <style name="def:decimal" use-style="def:constant"/>
  <style name="def:doc-comment" use-style="def:comment"/>
  <style name="def:doc-comment-element" use-style="def:comment"/>
  <style name='def:floating-point' use-style="def:constant"/>
  <style name="def:link-text" use-style="def:string"/>
  <style name="def:net-address" use-style="def:link-destination"/>
  <style name="def:number" use-style="def:constant"/>
  <style name="def:shebang" use-style="def:link-symbol"/>
  <style name="def:special-constant" use-style="def:constant"/>

</style-scheme>
